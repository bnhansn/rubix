<!DOCTYPE html>
<html>
	<head>
		{{! document settings }}
	  <meta charset="utf-8">
	  <meta http-equiv="X-UA-Compatible" content="IE=edge">
	  {{! page meta }}
	  <title>{{meta_title}}</title>
	  <meta name="description" content="{{meta_description}}">

	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

	  {{! stylesheets/scripts }}
	  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Patua+One|Open+Sans:400,300,600|Bitter:400,700,400italic">
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{asset "css/normalize.css"}}">
    <link rel="stylesheet" href="{{asset "css/theme.css"}}">
    <script type="text/javascript">
      if (typeof jQuery == 'undefined') {
        document.write('<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></'+'script>');
      }
    </script>
	  <script src="{{asset "js/jquery.ghostHunter.min.js"}}"></script>
	  <script src="{{asset "js/fastclick.min.js"}}"></script>
	  <script src="{{asset "js/theme.js"}}"></script>

	  {{ghost_head}}
	</head>
	<body class="{{body_class}}">

		<div class="canvas-wrap">
			
			<div class="off-canvas">
				{{navigation}}
			</div>

			<div class="on-canvas">

				<div class="navbar">
					<div class="navbar-items">
						<a class="blog-logo" href="/">
							{{#if @blog.logo}}
								<img src="{{@blog.logo}}" alt="{{@blog.title}}">
							{{else}}
								<span class="blog-title">{{@blog.title}}</span>
							{{/if}}
						</a>
					  <form class="search-form">
			        <input class="search-input" type="text" placeholder="Search">
					  	<i class="fa fa-search"></i>
					  </form>
						<a href="#" role="button" id="off-canvas-toggle"><i class="fa fa-bars"></i></a>
					</div>
				</div>

				<div class="categories-bar">
					<div class="categories container">
						{{navigation}}
					</div>
				</div>

	    	{{{body}}}

	    	<footer class="footer">
	    		<div class="container">
	    			<div class="footer-links">
	    				{{navigation}}
	    			</div>
	    			<hr>
	    			<div class="footer-bottom">
		    	    <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
		    	    <section class="poweredby">Proudly published with <a href="https://ghost.org">Ghost</a></section>
		    	  </div>
	    	  </div>
	    	</footer>

		  </div>{{! end on-canvas }}

	  </div>{{! end canvas-wrap }}

	  {{ghost_foot}}
	</body>
</html>